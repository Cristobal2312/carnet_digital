<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#295EAE"
    tools:context=".Vista.GUI_AdultoMayor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".RMostrarAgenda">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="410dp"
            android:layout_height="659dp"
            android:background="@color/blue_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.63"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Siguiente Hora:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                tools:ignore="HardcodedText,SpUsage" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="313dp"
                android:layout_height="506dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="504dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/txtNHorario"
                        android:layout_width="196dp"
                        android:layout_height="94dp"
                        android:layout_marginStart="58dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="59dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:hint="14:30"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="70dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="89dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="94dp"
                        android:text="HORARIO"
                        android:textColor="@color/gray"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:id="@+id/txtNFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="89dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="88dp"
                        android:hint="20/12/2023"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtNHorario"
                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="88dp"
                        android:layout_marginTop="44dp"
                        android:layout_marginEnd="88dp"
                        android:text="Terapeuta"
                        android:textColor="@color/gray"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtNFecha"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:id="@+id/VtxtRutPaciente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="29dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="84dp"
                        android:hint="A20-B"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/VtxtNombrePaciente"
                        tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                    <TextView
                        android:id="@+id/VtxtNombrePaciente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="32dp"
                        android:hint="Pedro Alfaro Rodrigez"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="62dp"
                        android:layout_marginTop="17dp"
                        android:text="BOX:"
                        android:textColor="@color/gray"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/VtxtNombrePaciente"
                        tools:ignore="HardcodedText,SpUsage" />

                    <Button
                        android:id="@+id/CbtnMas"
                        android:layout_width="193dp"
                        android:layout_height="74dp"
                        android:layout_marginStart="62dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginEnd="58dp"
                        android:layout_marginBottom="17dp"
                        android:backgroundTint="#3D4A87"
                        android:text="Mas âžœ"
                        android:textSize="29dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView6"
                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:text="Nota: Recordar que debe presentarse 10 minutos antes de la consulta."
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>